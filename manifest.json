{
  "name": "Zendesk Auto Refresh V2",
  "description": "This is a third party plugin that will enforce zendesk to refresh. Originally developed by Brandon Stubbs",
  "version": "0.0.1",
  "manifest_version": 1,
  "minimum_chrome_version": "45",
  "content_scripts": [
    {
      "matches": ["https://*.zendesk.com/agent/filters/*", "https://*.zendesk.com/"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action" : {
    "default_icon": {
      "128": "refresh-icon.png"
    }
  },
  "icons": {"128": "refresh-icon.png"},
  "permissions" : ["storage", "declarativeContent", "https://*.zendesk.com/agent/*"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "author": "Jonas Libbrecht"
}